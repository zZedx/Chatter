<%- layout('/layouts/boilerplate') %>

  <div class="loginForm shadow">
    <h1 class="text-center my-5">LOGIN</h1>
    <form action="/login" method="post" class="needs-validation" novalidate>
      <input type="text" class="username form-control" name="username" placeholder="Username" required>
      <input type="password" class="password form-control" name="password" placeholder="Password" required>
      <!-- <div class="check">
        <input type="checkbox" name="remember" id="remember" class="form-check-input me-1">
        <label for="checkbox">Remember Me</label>
      </div> -->
      <button class="loginBtn my-4">Login</button>
    </form>
    <h6 class="text-center text-secondary">Or Login With</h6>
    <div class="extraOptions row justify-content-between container m-auto p-0">
      <button class="btn btn-sm btn-outline-secondary col-sm-5 mt-2"><img
          src="https://www.edigitalagency.com.au/wp-content/uploads/Facebook-logo-blue-circle-large-transparent-png.png"
          alt=""> Facebook</button>
      <button class="btn btn-sm btn-outline-secondary col-sm-5 mt-2"><img
          src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png"
          alt=""> Google</button>
    </div>
    <span class="text-secondary">Not a member? <a href="/register" class="link-secondary">Sign up now</a></span>
  </div>